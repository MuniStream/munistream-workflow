################################################################################
# CONFIGURACIÓN DE ANÁLISIS DE SEGURIDAD - PEMC 2025
# PAW AI S.A.S. DE C.V.
################################################################################

# IMPORTANTE:
# 1. Copia este archivo como .env: cp .env.example .env
# 2. Completa los valores con tu configuración
# 3. NUNCA commitees el archivo .env a Git

################################################################################
# REPOSITORIOS A ANALIZAR
################################################################################

# URL del repositorio munistream-platform
# Formato: https://github.com/tu-org/munistream-platform.git
# O para SSH: git@github.com:tu-org/munistream-platform.git
MUNISTREAM_REPO_URL=""

# URL del repositorio puentecatastral
PUENTECATASTRAL_REPO_URL=""

################################################################################
# AUTENTICACIÓN GITHUB
################################################################################

# Token de GitHub para acceso a repositorios privados
# Crear en: GitHub Settings > Developer settings > Personal access tokens
# Permisos necesarios: repo (acceso completo a repositorios)
GITHUB_TOKEN=""

################################################################################
# URLs DE APLICACIONES (Para análisis DAST)
################################################################################

# URL de la aplicación MuniStream en ejecución
# Ejemplo: https://catastro.dev.munistream.com
MUNISTREAM_URL="https://catastro.dev.munistream.com"

# URL de la API Puente Catastral
# Ejemplo: https://catastro.dev.munistream.com/api/puente
PUENTE_API_URL="https://catastro.dev.munistream.com/api/puente"

################################################################################
# CONFIGURACIÓN DE ANÁLISIS
################################################################################

# Nivel de verbosidad de logs (0=silencioso, 1=normal, 2=verbose)
LOG_LEVEL=1

# Timeout para operaciones (en segundos)
TIMEOUT=300

# Número de intentos para operaciones de red
MAX_RETRIES=3

################################################################################
# CONFIGURACIÓN DE REPORTES
################################################################################

# Formato de reportes (json, html, markdown, all)
REPORT_FORMAT="all"

# Incluir código de ejemplo en reportes (true/false)
INCLUDE_CODE_SAMPLES=true

# Incluir screenshots en reportes DAST (true/false)
INCLUDE_SCREENSHOTS=false

################################################################################
# CONFIGURACIÓN DE HERRAMIENTAS
################################################################################

# Semgrep: Configuraciones custom (opcional)
SEMGREP_RULES=""

# Trivy: Severidades a reportar (CRITICAL,HIGH,MEDIUM,LOW)
TRIVY_SEVERITY="CRITICAL,HIGH,MEDIUM,LOW"

# OWASP ZAP: Nivel de escaneo (baseline, full, api)
ZAP_SCAN_TYPE="baseline"

################################################################################
# NOTIFICACIONES (Opcional)
################################################################################

# Email para notificaciones de análisis completado
NOTIFICATION_EMAIL=""

# Webhook para notificaciones (Slack, Teams, etc.)
NOTIFICATION_WEBHOOK=""

################################################################################
# INTEGRACIÓN CI/CD (Opcional)
################################################################################

# Bloquear build si hay vulnerabilidades críticas (true/false)
FAIL_ON_CRITICAL=true

# Bloquear build si hay más de X vulnerabilidades altas
FAIL_ON_HIGH_THRESHOLD=5

################################################################################
# PROXY (Opcional)
################################################################################

# Si estás detrás de un proxy corporativo
HTTP_PROXY=""
HTTPS_PROXY=""
NO_PROXY="localhost,127.0.0.1"

################################################################################
# CONFIGURACIÓN AVANZADA (No modificar a menos que sepas lo que haces)
################################################################################

# Directorio temporal para clones
TEMP_DIR="./temp_repos"

# Directorio de reportes
REPORTS_DIR="./reports"

# Mantener repositorios clonados (true/false)
KEEP_CLONED_REPOS=false

# Ejecutar análisis en paralelo (true/false)
PARALLEL_EXECUTION=false
